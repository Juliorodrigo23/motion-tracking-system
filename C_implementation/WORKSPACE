workspace(name = "arm_tracker")

load("@bazel_tools//tools/build_defs/repo:http.bzl", "http_archive")
load("@bazel_tools//tools/build_defs/repo:git.bzl", "new_git_repository")
load("@bazel_tools//tools/build_defs/repo:local.bzl", "local_repository", "new_local_repository")

# MediaPipe
local_repository(
    name = "mediapipe",
    path = "mediapipe",
)

# OpenCV
new_local_repository(
    name = "opencv",
    build_file = "@mediapipe//third_party:opencv_macos.BUILD",
    path = "/opt/homebrew/opt/opencv",
)

# Load MediaPipe dependencies
load("@mediapipe//WORKSPACE.bazel", "mediapipe_dependencies")
mediapipe_dependencies()

# Load Bazel rules
http_archive(
    name = "rules_cc",
    urls = ["https://github.com/bazelbuild/rules_cc/releases/download/0.0.9/rules_cc-0.0.9.tar.gz"],
    sha256 = "2037875b9a4456dce4a79d112a8ae885bbc4aad968e6587dca6e64f3a0900cdf",
)